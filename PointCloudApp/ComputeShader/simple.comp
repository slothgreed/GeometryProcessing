#version 430
uniform uint u_elementSize;
layout(local_size_x = 256, local_size_y = 1, local_size_z = 1) in;

layout(std430, binding = 3) buffer res
{
	float result[];
};


void main()
{
	uint index = gl_GlobalInvocationID.x;
	if(index >= u_elementSize){return;}
	result[index] = mix(0.0, 3.14,float(index) / u_elementSize);
} 